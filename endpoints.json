{
    "GET /api": {
        "description": "serves up a json representation of all the available endpoints of the api"
    },
    "GET /api/topics": {
        "description": "serves an array of all topics",
        "queries": {},
        "exampleResponse": {
            "topics": [{ "slug": "football", "description": "Footie!" }]
        }
    },
    "GET /api/articles": {
        "description": "serves an array of articles",
        "queries": {
            "author": "not-yet-available",
            "topic": "{topicToFilterBy}",
            "sort_by": [
                "article_id",
                "title",
                "topic",
                "author",
                "body",
                "created_at",
                "votes"
            ],
            "order": ["ASC", "DESC"]
        },
        "exampleResponse": {
            "articles": [
                {
                    "title": "Seafood substitutions are increasing",
                    "topic": "cooking",
                    "author": "weegembump",
                    "body": "Text from the article..",
                    "created_at": "2018-05-30T15:59:13.341Z",
                    "votes": 0,
                    "comment_count": 6
                }
            ]
        }
    },
    "GET /api/articles/:article_id": {
        "description": "serves a single article object, fetched by id",
        "queries": {},
        "exampleResponse": {
            "article": {
                "article_id": 1,
                "title": "Living in the shadow of a great man",
                "topic": "mitch",
                "author": "butter_bridge",
                "body": "I find this existence challenging",
                "created_at": "2020-07-09T20:11:00.000Z",
                "votes": 100,
                "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
            }
        }
    },
    "PATCH /api/articles/:article_id": {
        "description": "adjusts article vote count by inc_votes, then returns the updated article",
        "queries": {},
        "exampleRequestBody": { "inc_votes": 50 },
        "exampleResponse": {
            "article": {
                "author": "icellusedkars",
                "title": "Does Mitch predate civilisation?",
                "body": "Archaeologists have uncovered a gigantic statue from the dawn of humanity, and it has an uncanny resemblance to Mitch. Surely I am not the only person who can see this?!",
                "article_id": 8,
                "topic": "mitch",
                "created_at": "2020-04-17T01:08:00.000Z",
                "votes": 50,
                "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
            }
        }
    },
    "GET /api/articles/:article_id/comments": {
        "description": "serves an array of all comments for given article id",
        "queries": {},
        "exampleResponse": {
            "comments": [
                {
                    "comment_id": 15,
                    "body": "I am 100% sure that we're not completely sure.",
                    "article_id": 5,
                    "author": "butter_bridge",
                    "votes": 1,
                    "created_at": "2020-11-24T00:08:00.000Z"
                },
                {
                    "comment_id": 14,
                    "body": "What do you see? I have no idea where this will lead us. This place I speak of, is known as the Black Lodge.",
                    "article_id": 5,
                    "author": "icellusedkars",
                    "votes": 16,
                    "created_at": "2020-06-09T05:00:00.000Z"
                }
            ]
        }
    },
    "POST /api/articles/:article_id/comments": {
        "description": "posts a comment to respective article, then returns posted comment",
        "queries": {},
        "exampleRequestBody": {
            "username": "butter_bride",
            "body": "I love posting comments"
        },
        "exampleResponse": {
            "comment": {
                "comment_id": 19,
                "votes": 23,
                "created_at": "2020-07-09T20:11:00.000Z",
                "author": "butter_bridge",
                "body": "this is a comment body",
                "article_id": 7
            }
        }
    },
    "PATCH /api/comments/:comment_id": {
        "description": "adjusts comment vote count by inc_votes, then returns the updated comment",
        "queries": {},
        "exampleRequestBody": { "inc_votes": 1 },
        "exampleResponse": {
            "comment": {
                "comment_id": 2,
                "body": "The beautiful thing about treasure is that it exists. Got to find out what kind of sheets these are; not cotton, not rayon, silky.",
                "article_id": 1,
                "author": "butter_bridge",
                "votes": 15,
                "created_at": "2020-10-31T03:03:00.000Z"
            }
        }
    },
    "DELETE /api/comments/:comment_id": {
        "description": "deletes a comment by comment_id. No response is returned.",
        "queries": {},
        "exampleResponse": {}
    },
    "GET /api/users": {
        "description": "serves an array of all users",
        "queries": {},
        "exampleResponse": {
            "users": [
                {
                    "username": "jobeyobey",
                    "name": "joe",
                    "avatar_url": "https://avatars.githubusercontent.com/u/117482381?v=4"
                }
            ]
        }
    },
    "GET /api/users/:username": {
        "description": "serves a user object when given an existing username",
        "queries": {},
        "exampleResponse": {
            "users": {
                "username": "butter_bridge",
                "name": "jonny",
                "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
            }
        }
    }
}
